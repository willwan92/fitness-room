/**index.wxss**/
.container {
  padding: 0 15rpx;
}

.page-section {
  width: 700rpx;
  padding: 0 25rpx;
}

/* search-bar */
.search-bar {
  position: relative;
  display: flex;
  height: 68rpx;
  line-height: 68rpx;
  background-color: #fff;
}

.icon-search {
  position: absolute;
  top: 20rpx;
  line-height: 1;
  left: 160rpx;
}

.city-select {
  width: 120rpx;
}

.search-input {
  flex: 1;
  padding-left: 50rpx;
  height: 68rpx;
  line-height: 68rpx;
  background: #f9f9f9;
  border-radius: 8rpx;
}

/* swiper */
.swiper {
  padding-top: 30rpx;
  height: 300rpx;
  background: linear-gradient(#fff, #f9f9f9)
}

.swiper .swiper-item {
  border-radius: 12rpx;
}

.swiper .swiper-img {
  width: 100%;
  height: 100%;
}